<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="PreferencesWindow" parent="AdwPreferencesWindow">
    <property name="default_width">460</property>
    <property name="default_height">-1</property>
    <property name="title">Zandronum Preferences</property>
    <property name="modal">True</property>
    <property name="hide_on_close">True</property>
    <property name="search_enabled">False</property>
    <child>
      <object class="AdwPreferencesPage">
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Application Paths</property>
            <child type="header-suffix">
              <object class="GtkButton" id="paths_btn">
                <property name="icon-name">view-refresh-symbolic</property>
                <signal name="clicked" handler="on_paths_btn_clicked" swapped="no"/>
                <style>
                  <class name="flat"/>
                </style>
              </object>
            </child>
            <child>
              <object class="FileRow" id="exec_filerow">
                <property name="title">_Zandronum Path</property>
                <property name="use_underline">True</property>
                <property name="icon_name">application-x-executable-symbolic</property>
                <property name="can_reset">True</property>
                <property name="dialog_title">Select Zandronum Executable</property>
              </object>
            </child>
            <child>
              <object class="FileRow" id="iwaddir_filerow">
                <property name="title">_IWAD Folder</property>
                <property name="use_underline">True</property>
                <property name="folder_select">True</property>
                <property name="can_reset">True</property>
                <property name="dialog_title">Select IWAD Folder</property>
              </object>
            </child>
            <child>
              <object class="FileRow" id="pwaddir_filerow">
                <property name="title">_PWAD Folder</property>
                <property name="use_underline">True</property>
                <property name="folder_select">True</property>
                <property name="can_reset">True</property>
                <property name="dialog_title">Select PWAD Folder</property>
              </object>
            </child>
            <child>
              <object class="FileRow" id="moddir_filerow">
                <property name="title">_Hi-Res Graphics Folder</property>
                <property name="use_underline">True</property>
                <property name="folder_select">True</property>
                <property name="can_reset">True</property>
                <property name="dialog_title">Select Mod Folder</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Hi-Res Graphics</property>
            <child type="header-suffix">
              <object class="GtkButton" id="graphics_btn">
                <property name="icon-name">view-refresh-symbolic</property>
                <signal name="clicked" handler="on_graphics_btn_clicked" swapped="no"/>
                <style>
                  <class name="flat"/>
                </style>
              </object>
            </child>
            <child>
              <object class="AdwExpanderRow">
                <property name="title">_Enable High Resolution Graphics</property>
                <property name="use_underline">True</property>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">_Textures</property>
                    <property name="use_underline">True</property>
                    <property name="activatable_widget">texture_switch</property>
                    <child>
                      <object class="GtkSwitch" id="texture_switch">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">_Objects and Weapons</property>
                    <property name="use_underline">True</property>
                    <property name="activatable_widget">object_switch</property>
                    <child>
                      <object class="GtkSwitch" id="object_switch">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">_Monsters</property>
                    <property name="use_underline">True</property>
                    <property name="activatable_widget">monster_switch</property>
                    <child>
                      <object class="GtkSwitch" id="monster_switch">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">_Screens and Menus</property>
                    <property name="use_underline">True</property>
                    <property name="activatable_widget">menu_switch</property>
                    <child>
                      <object class="GtkSwitch" id="menu_switch">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">H_UD</property>
                    <property name="use_underline">True</property>
                    <property name="activatable_widget">hud_switch</property>
                    <child>
                      <object class="GtkSwitch" id="hud_switch">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
