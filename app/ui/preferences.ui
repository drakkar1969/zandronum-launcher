<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<template class="PreferencesWindow" parent="AdwPreferencesWindow">
		<property name="default_width">540</property>
		<property name="default_height">-1</property>
		<property name="title">Zandronum Preferences</property>
		<property name="modal">True</property>
		<property name="hide_on_close">True</property>
		<property name="search_enabled">False</property>
		<child>
			<object class="AdwPreferencesPage">
				<child>
					<object class="AdwPreferencesGroup">
						<property name="title">Application Paths</property>
						<child>
							<object class="AdwActionRow">
								<property name="title">_Zandronum Path</property>
								<property name="use_underline">True</property>
								<property name="activatable_widget">exec_btn</property>
								<child>
									<object class="FileDialogButton" id="exec_btn">
										<property name="valign">center</property>
										<property name="margin_start">16</property>
										<property name="icon_name">application-x-executable-symbolic</property>
										<property name="can_reset">True</property>
										<property name="title">Select Zandronum Executable</property>
									</object>
								</child>
							</object>
						</child>
						<child>
							<object class="AdwActionRow">
								<property name="title">_IWAD Folder</property>
								<property name="use_underline">True</property>
								<property name="activatable_widget">iwaddir_btn</property>
								<child>
									<object class="FileDialogButton" id="iwaddir_btn">
										<property name="valign">center</property>
										<property name="margin_start">16</property>
										<property name="folder_select">True</property>
										<property name="can_reset">True</property>
										<property name="title">Select IWAD Folder</property>
									</object>
								</child>
							</object>
						</child>
						<child>
							<object class="AdwActionRow">
								<property name="title">Default _WAD Folder</property>
								<property name="use_underline">True</property>
								<property name="activatable_widget">pwaddir_btn</property>
								<child>
									<object class="FileDialogButton" id="pwaddir_btn">
										<property name="valign">center</property>
										<property name="margin_start">16</property>
										<property name="folder_select">True</property>
										<property name="can_reset">True</property>
										<property name="title">Select Default WAD Folder</property>
									</object>
								</child>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="AdwPreferencesGroup">
						<property name="title">Hi-Res Graphics</property>
						<child>
							<object class="AdwExpanderRow">
								<property name="title">Enable High Resolution _Graphics</property>
								<property name="use_underline">True</property>
								<child type="action">
									<object class="GtkCheckButton" id="modgroup_checkbtn">
										<property name="valign">center</property>
										<style>
											<class name="selection-mode"/>
										</style>
										<signal name="toggled" handler="on_modgroup_checkbtn_toggled" swapped="no"/>
									</object>
								</child>
								<child>
									<object class="AdwActionRow">
										<property name="title">_Textures</property>
										<property name="use_underline">True</property>
										<property name="activatable_widget">texture_checkbtn</property>
										<child>
											<object class="GtkCheckButton" id="texture_checkbtn">
												<property name="valign">center</property>
												<style>
													<class name="selection-mode"/>
												</style>
												<signal name="toggled" handler="on_mod_checkbtn_toggled" swapped="no"/>
											</object>
										</child>
									</object>
								</child>
								<child>
									<object class="AdwActionRow">
										<property name="title">_Objects and Weapons</property>
										<property name="use_underline">True</property>
										<property name="activatable_widget">object_checkbtn</property>
										<child>
											<object class="GtkCheckButton" id="object_checkbtn">
												<property name="valign">center</property>
												<style>
													<class name="selection-mode"/>
												</style>
												<signal name="toggled" handler="on_mod_checkbtn_toggled" swapped="no"/>
											</object>
										</child>
									</object>
								</child>
								<child>
									<object class="AdwActionRow">
										<property name="title">_Monsters</property>
										<property name="use_underline">True</property>
										<property name="activatable_widget">monster_checkbtn</property>
										<child>
											<object class="GtkCheckButton" id="monster_checkbtn">
												<property name="valign">center</property>
												<style>
													<class name="selection-mode"/>
												</style>
												<signal name="toggled" handler="on_mod_checkbtn_toggled" swapped="no"/>
											</object>
										</child>
									</object>
								</child>
								<child>
									<object class="AdwActionRow">
										<property name="title">_Screens and Menus</property>
										<property name="use_underline">True</property>
										<property name="activatable_widget">menu_checkbtn</property>
										<child>
											<object class="GtkCheckButton" id="menu_checkbtn">
												<property name="valign">center</property>
												<style>
													<class name="selection-mode"/>
												</style>
												<signal name="toggled" handler="on_mod_checkbtn_toggled" swapped="no"/>
											</object>
										</child>
									</object>
								</child>
								<child>
									<object class="AdwActionRow">
										<property name="title">_HUD</property>
										<property name="use_underline">True</property>
										<property name="activatable_widget">hud_checkbtn</property>
										<child>
											<object class="GtkCheckButton" id="hud_checkbtn">
												<property name="valign">center</property>
												<style>
													<class name="selection-mode"/>
												</style>
												<signal name="toggled" handler="on_mod_checkbtn_toggled" swapped="no"/>
											</object>
										</child>
									</object>
								</child>
							</object>
						</child>
					</object>
				</child>
			</object>
		</child>
	</template>
</interface>
