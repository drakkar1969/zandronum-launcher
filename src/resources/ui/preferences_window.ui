<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!--// PreferencesWindow template //-->
  <template class="PreferencesWindow" parent="AdwPreferencesWindow">
    <property name="default_width">560</property>
    <property name="default_height">-1</property>
    <property name="title">Preferences</property>
    <property name="modal">True</property>
    <property name="hide_on_close">True</property>
    <property name="search_enabled">False</property>
    <child>
      <object class="AdwPreferencesPage">
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Application Paths</property>
            <child>
              <object class="FileSelectRow" id="exec_filerow">
                <property name="title">_Zandronum Path</property>
                <property name="subtitle">Path to Zandronum executable</property>
                <property name="use_underline">True</property>
                <property name="icon">application-x-executable-symbolic</property>
                <property name="dialog_title">Select Zandronum Executable</property>
              </object>
            </child>
            <child>
              <object class="FileSelectRow" id="iwad_filerow">
                <property name="title">_IWAD Folder</property>
                <property name="subtitle">Folder to search for IWAD files</property>
                <property name="use_underline">True</property>
                <property name="select-mode">folder</property>
                <property name="dialog_title">Select IWAD Folder</property>
              </object>
            </child>
            <child>
              <object class="FileSelectRow" id="pwad_filerow">
                <property name="title">_PWAD Folder</property>
                <property name="subtitle">Folder to search for optional PWAD files</property>
                <property name="use_underline">True</property>
                <property name="select-mode">folder</property>
                <property name="dialog_title">Select PWAD Folder</property>
              </object>
            </child>
            <child>
              <object class="FileSelectRow" id="mods_filerow">
                <property name="title">_Hi-Res Graphics Folder</property>
                <property name="subtitle">Folder with high resolution graphics files</property>
                <property name="use_underline">True</property>
                <property name="select-mode">folder</property>
                <property name="dialog_title">Select Mods Folder</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Hi-Res Graphics</property>
            <child>
              <object class="AdwExpanderRow">
                <property name="title">_Enable High Resolution Graphics</property>
                <property name="use_underline">True</property>
                <child>
                  <object class="AdwSwitchRow" id="texture_switchrow">
                    <property name="title">_Textures</property>
                    <property name="use_underline">True</property>
                  </object>
                </child>
                <child>
                  <object class="AdwSwitchRow" id="object_switchrow">
                    <property name="title">_Objects and Weapons</property>
                    <property name="use_underline">True</property>
                  </object>
                </child>
                <child>
                  <object class="AdwSwitchRow" id="monster_switchrow">
                    <property name="title">_Monsters</property>
                    <property name="use_underline">True</property>
                  </object>
                </child>
                <child>
                  <object class="AdwSwitchRow" id="menu_switchrow">
                    <property name="title">_Screens and Menus</property>
                    <property name="use_underline">True</property>
                  </object>
                </child>
                <child>
                  <object class="AdwSwitchRow" id="hud_switchrow">
                    <property name="title">H_UD</property>
                    <property name="use_underline">True</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Preferences</property>
            <child>
              <object class="AdwActionRow">
                <property name="title">_Reset Preferences</property>
                <property name="subtitle">Reset all preferences to default values</property>
                <property name="use-underline">True</property>
                <property name="activatable-widget">reset_button</property>
                <child>
                  <object class="GtkButton" id="reset_button">
                    <property name="valign">center</property>
                    <property name="label">Reset</property>
                    <style>
                      <class name="destructive-action"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
